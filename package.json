{
    "name": "vscode-ldjs",
    "displayName": "vscode-ldjs",
    "description": "vscode adapter for ldjs",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.ldjsstart",
        "onCommand:extension.ldjsrun",
        "onLanguage:js"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.ldjsstart",
                "title": "LDJS: Start Server"
            },
            {
                "command": "extension.ldjsend",
                "title": "LDJS: Stop Server"
            },
            {
                "command": "extension.ldjsrun",
                "title": "LDJS: Run"
            },
            {
                "command": "extension.ldjsclearrequire",
                "title": "LDJS: Clear require cache"
            }
        ],
        "keybindings": [{
            "command": "extension.ldjsrun",
            "key":"ctrl+enter",
            "mac": "cmd+enter",
            "when": "editortextfocus"

        }],
        "configuration": {
            "type": "object",
            "title": "LDJS configuration",
            "properties": {
                "ldjs.server_url": {
                    "type": "string",
                    "default": "127.0.0.1",
                    "description": "IP address of TouchDesigner"
                },
                "ldjs.server_port": {
                    "type": "integer",
                    "default": 5959,
                    "description": "Port of TouchDesigner TCP server"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.1.6",
        "vscode": "^1.1.22",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "fp-ts": "^1.11.2",
        "lambdadesignerjs": "file:../lambdadesignerjs",
        "net": "^1.0.2"
    }
}
